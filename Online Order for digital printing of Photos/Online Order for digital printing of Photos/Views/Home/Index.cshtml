<style>
    .products_section {
        padding: 50px 0;
        background-color: #f9f9f9;
    }

    .heading_container h2 {
        font-size: 2.5rem;
        font-weight: bold;
        color: #333;
    }

    .heading_container p {
        margin-top: 10px;
        color: #666;
        font-size: 1rem;
    }

    .product_boxx {
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        margin-bottom: 30px;
        transition: transform 0.3s ease;
    }

        .product_boxx:hover {
            transform: translateY(-5px);
        }

    .img-boxx {
        height: 200px;
        background: #f0f0f0;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }

        .img-box img {
            max-height: 100%;
            width: auto;
        }

    .product_info {
        padding: 20px;
        text-align: center;
    }

        .product_info h5 {
            font-size: 1.2rem;
            color: #333;
            margin-bottom: 10px;
        }

        .product_info p {
            font-size: 0.9rem;
            color: #777;
            margin-bottom: 15px;
        }

        .product_info .price {
            font-size: 1rem;
            font-weight: bold;
            color: #444;
            display: block;
            margin-bottom: 15px;
        }

    .btn-box {
        text-align: center;
    }

    .btn-brown {
        background-color: #8B4513;
        color: #fff;
        padding: 10px 20px;
        border-radius: 5px;
        text-transform: uppercase;
        font-size: 0.9rem;
        font-weight: bold;
        display: inline-block;
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

        .btn-brown:hover {
            background-color: #6B3311;
        }

    .btn-secondary {
        background-color: #555;
        color: #fff;
        padding: 10px 25px;
        border-radius: 5px;
        text-transform: uppercase;
        font-size: 1rem;
        font-weight: bold;
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

        .btn-secondary:hover {
            background-color: #333;
        }

</style>
