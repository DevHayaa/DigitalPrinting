@model Online_Order_for_digital_printing_of_Photos.Models.PrintSize

<h2>Edit Print Size</h2>

<form method="post">
    <input type="hidden" name="PrintSizeId" value="@Model.PrintSizeId" />

    <label for="Size">Size</label>
    <input type="text" name="Size" value="@Model.Size" required />

    <label for="Price">Price</label>
    <input type="text" name="Price" value="@Model.Price" required />

    <button type="submit">Save Changes</button>
</form>
